---
interface Props {
  class?: string
  ring?: string
  type?: 'email' | 'number' | 'url'
  id?: string
  placeholder?: string
  required?: boolean
}

const { class: className, ring, type, id, placeholder, required } = Astro.props
---

<input
  class:list={[
    className ? className : 'w-full',
    'py-3.5 px-4.5 rounded ring ring-inset leading-none',
    ring ? ring : 'ring-gray-500 focus:ring-orange-600',
    'placeholder:text-current/70'
  ]}
  type={type || 'text'}
  id={id}
  placeholder={required ? `${placeholder} *` : placeholder}
  required={required}
  min={type === 'number' ? 0 : undefined}
/>
